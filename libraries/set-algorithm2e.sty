	\IfBooleanTF{#1}{%
		% NOTE comando per la riga di intestazione
		\Rem*[f]{%
			\makebox[15mm][c]{#2}% costo
			\makebox[15mm][c]{#3}% # Volte / caso migliore
			\makebox[15mm][c]{#4}% #         caso pessimo
		}%
	}{%
		% NOTE comando per descrivere i costi
		\Rem*[f]{%
			\makebox[15mm][c]{\(#2\)}% costo
			\makebox[15mm][c]{\(#3\)}% caso migliore
			\makebox[15mm][c]{#4}%     caso pessimo
		}%
	}%
}
